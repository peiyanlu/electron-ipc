{
  "name": "@peiyanlu/electron-ipc",
  "description": "Electron IPC connection tool.",
  "version": "1.0.1",
  "type": "commonjs",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepack": "tsc",
    "prepublish": "tsc",
    "release": "release-it"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./backend": {
      "import": "./dist/ElectronBackend.js",
      "require": "./dist/ElectronBackend.js",
      "types": "./dist/ElectronBackend.d.ts"
    },
    "./preload": {
      "import": "./dist/ElectronPreload.js",
      "require": "./dist/ElectronPreload.js",
      "types": "./dist/ElectronPreload.d.ts"
    },
    "./frontend": {
      "import": "./dist/ElectronFrontend.js",
      "require": "./dist/ElectronFrontend.js",
      "types": "./dist/ElectronFrontend.d.ts"
    }
  },
  "devDependencies": {
    "@peiyanlu/ts-utils": "^0.0.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^22.15.23",
    "electron": "^38.2.2",
    "release-it": "^19.0.5",
    "release-it-pnpm": "^4.6.5",
    "typescript": "^5.9.3"
  },
  "author": {
    "name": "YanluPei",
    "email": "peiyanlu@vip.qq.com"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:peiyanlu/electron-ipc.git"
  },
  "homepage": "https://github.com/peiyanlu/electron-ipc",
  "bugs": {
    "url": "https://github.com/peiyanlu/electron-ipc/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.MD",
    "package.json"
  ],
  "keywords": [
    "typescript",
    "electron",
    "ipc"
  ]
}
